<%- include('../partials/header') %>

<style>
  *{
  padding:0;
  margin:0;
  box-sizing: border-box;
}

body{
  background:#eee;
  font-family:sans-serif;
}

.banner-area{
  width:100%;
  height:100vh;
  background-image:linear-gradient(rgba(0, 0, 0, 0.5),rgba(0, 0, 0, 0.5)), url(../images/avengers.jpg);
  background-size:cover;
}        

.content-area {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

#create-account {
  background-color: linear-gradient(rgba(0, 0, 0, 0.5),rgba(0, 0, 0, 0.5));
  color: #ffffff;
  font-size: 14px;
  width: 100%;
  padding: 10px 0;
  border-radius: 0 0 4px 4px;
}

#create-account> p > a{
  text-decoration: none;
  color: white;
}

#create-account> p > a:hover {
  color: aquamarine;
}

.registerButton:hover {
    color: #94dfec;
}
</style>
<div class="banner-area">
    
<form class="content-area shadow p-3 mb-5 rounded">
    <h1 class="text-white">Create an Account</h1>
    <hr style="border: 1px solid gray;">
    <div class="content text-white">
        <label for="fname" class="form-label">First Name</label>
        <input type="fname" class="form-control" id="fname" aria-describedby="fname" style="width: 300px;">
      </div>
      <div class="content text-white">
        <label for="lname" class="form-label">Last Name</label>
        <input type="lname" class="form-control" id="lname" aria-describedby="lname" style="width: 300px;">
      </div>
  <div class="content text-white">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" id="email" aria-describedby="email" style="width: 300px;">
  </div>
  <div class="content text-white">
    <label for="password" class="form-label">Password</label>
    <input type="password" class="form-control" id="password" style="width: 300px;">
  </div><br>
  <div class="registerButton text-center">
  <button type="submit" class="btn btn-info">Login</button>
</div>
<hr style="border: 1px solid gray;">
  <div id="create-account">
    <p>Back to Login??&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="/userlogin">Login</a><p>
  </div>
</form>
</div>


  <%- include('../partials/footer') %>

  